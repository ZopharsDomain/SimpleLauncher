<Window
    x:Class="SimpleLauncher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Simple Launcher"
    Width="830"
    MinWidth="830"
    Background="{DynamicResource PrimaryBackground}"
    Closing="MainWindow_Closing"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Grid Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" VerticalAlignment="Top" Background="{DynamicResource PrimaryBackground}" Foreground="{DynamicResource PrimaryForeground}">
            <MenuItem Header="Show">
                <MenuItem Click="HideGames_Click" Header="Hide Games With No Cover">
                    <MenuItem.Icon>
                        <Image
                            Width="16"
                            Height="16"
                            Source="images/hidegames.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Click="ShowGames_Click" Header="Show All Games">
                    <MenuItem.Icon>
                        <Image
                            Width="16"
                            Height="16"
                            Source="images/showallgames.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem
                x:Name="AboutButton"
                Click="About_Click"
                Header="About" />
            <MenuItem
                x:Name="ExitButton"
                Click="Exit_Click"
                Header="Exit" />
        </Menu>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <!--  Dynamically add letter buttons here or define them manually in XAML  -->
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label
                Width="95"
                VerticalAlignment="Center"
                Content="Select System:" />
            <ComboBox
                Name="SystemComboBox"
                Width="716"
                VerticalAlignment="Center"
                SelectionChanged="SystemComboBox_SelectionChanged" />
        </StackPanel>

        <StackPanel
            Grid.Row="3"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label
                Width="95"
                VerticalAlignment="Center"
                Content="Select Emulator:" />
            <ComboBox
                Name="EmulatorComboBox"
                Width="716"
                VerticalAlignment="Center"
                SelectionChanged="EmulatorComboBox_SelectionChanged" />

        </StackPanel>
        
        <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Visible">
            <WrapPanel x:Name="gameFileGrid" Orientation="Horizontal" Background="{DynamicResource PrimaryBackground}">
                <!--  Items will be added here programmatically  -->
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>