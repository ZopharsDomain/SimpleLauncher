<Window
    x:Class="SimpleLauncher.EditSystemEasyModeAddSystem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Edit System"
    Width="900"
    Height="500"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" Margin="10">
        <Label Content="Please choose a system to Add" HorizontalAlignment="Center" />

        <ComboBox x:Name="SystemNameDropdown" HorizontalAlignment="Stretch"
                  SelectionChanged="SystemNameDropdown_SelectionChanged" />

        <Label x:Name="AskUser1" Content="Do you already have an emulator for this system?"
               HorizontalAlignment="Center" />
        <ComboBox x:Name="AlreadyHaveEmulatorDropdown" HorizontalAlignment="Stretch"
                  SelectionChanged="AlreadyHaveEmulatorDropdown_SelectionChanged" />

        <Label x:Name="AskUser2" Content="Please select an emulator for this system" 
               HorizontalAlignment="Center" />
        <ComboBox x:Name="EmulatorDropdown" HorizontalAlignment="Stretch"
                  SelectionChanged="EmulatorDropdown_SelectionChanged" />

        <StackPanel Orientation="Horizontal" Margin="10,10,10,0" HorizontalAlignment="Center">
            <Button x:Name="DownloadEmulatorButton" Content="Download Emulator" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Margin="10" Padding="5" Click="DownloadEmulatorButton_Click" IsEnabled="False" />
            <Button x:Name="DownloadCoreButton" Content="Download Core" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Margin="10" Padding="5" Click="DownloadCoreButton_Click" IsEnabled="False" />
            <Button x:Name="DownloadExtrasButton" Content="Download Extras" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Margin="10" Padding="5" Click="DownloadExtrasButton_Click" IsEnabled="False" />
        </StackPanel>

        <ProgressBar x:Name="DownloadProgressBar" HorizontalAlignment="Stretch" Height="25" Margin="10" />
    </StackPanel>
</Window>
