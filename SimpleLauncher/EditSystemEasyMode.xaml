<controls:MetroWindow     x:Class="SimpleLauncher.EditSystemEasyMode"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                          Title="Edit System - Easy Mode"
                          Width="350"
                          Height="280">
    <StackPanel Orientation="Vertical">
        
        <Label
            Margin="10,10,10,10"
            Content="What do you want to do?"
            HorizontalAlignment="Center"/>

        <Button
            Margin="10"
            Padding="10"
            Width="150"
            HorizontalAlignment="Center"
            Click="AddSystemButton_Click"
            Content="Add New System">
        </Button>

        <Button
            Margin="10"
            Padding="10"
            Width="150"
            HorizontalAlignment="Center"
            Click="EditSystemButton_Click"
            Content="Edit Existing System" />
        
        <Button
            Margin="10"
            Padding="10"
            Width="150"
            HorizontalAlignment="Center"
            Click="DeleteSystemButton_Click"
            Content="Delete Existing System" />
        
    </StackPanel>
</controls:MetroWindow>