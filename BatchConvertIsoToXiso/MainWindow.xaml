<Window x:Class="BatchConvertIsoToXiso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BatchConvertIsoToXiso"
        Title="{Binding StatusText, StringFormat='Batch Convert ISO to XISO - {0}'}"
        Height="500" Width="800"
        MinHeight="400" MinWidth="650">
    
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style TargetType="{x:Type Paragraph}">
            <Setter Property="Margin" Value="0" />
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Log Viewer -->
        <Border Grid.Row="0" Margin="10" BorderThickness="1" BorderBrush="#DDDDDD">
            <RichTextBox x:Name="LogViewer"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     Padding="5"
                     FontFamily="Consolas"
                     FontSize="12"
                     Background="#FAFAFA"
                     BorderThickness="0">
                <RichTextBox.Document>
                    <FlowDocument />
                </RichTextBox.Document>
            </RichTextBox>
        </Border>

        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <!-- Start Button -->
            <Button Grid.Column="0"
                    Content="Start Conversion"
                    Command="{Binding StartConversionCommand}"
                    Width="120" 
                    Height="30"
                    Margin="0,0,0,10"
                    Background="#007ACC"
                    Foreground="White"/>
            
            <!-- Status Label -->
            <TextBlock Grid.Column="1"
                       Text="{Binding StatusText}"
                       Margin="15,0,0,0"
                       VerticalAlignment="Center"/>
                
            <!-- Cancel Button -->
            <Button Grid.Column="2"
                    Content="Cancel"
                    Command="{Binding CancelConversionCommand}"
                    Width="100" 
                    Height="30"
                    Margin="0,0,0,10"
                    Background="#E74C3C"
                    Foreground="White"
                    Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </Grid>
    </Grid>
</Window>