<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <StartupObject>CreateBatchFilesForScummVMGames.Program</StartupObject>
    <ApplicationIcon>icon\icon.ico</ApplicationIcon>
    <NoWin32Manifest>true</NoWin32Manifest>
    <RepositoryType>git</RepositoryType>
    <UseWindowsForms>True</UseWindowsForms>
    <SupportedOSPlatformVersion>7.0</SupportedOSPlatformVersion>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <FileVersion>1.0.0</FileVersion>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="icon\icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="icon\icon.ico" />
    <Resource Include="icon\icon.ico" />
    <None Remove="icon\icon.png" />
    <Resource Include="icon\icon.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="LogForm.cs">
      <SubType>Form</SubType>
    </Compile>
  </ItemGroup>

</Project>
