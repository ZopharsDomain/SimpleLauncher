<Window
    x:Class="SimpleLauncher.EditSystem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Edit System"
    Width="900"
    Height="700"
    mc:Ignorable="d" WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- System Name -->
        <ComboBox
            x:Name="SystemNameDropdown"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="10"
            HorizontalAlignment="Stretch"
            SelectionChanged="SystemNameDropdown_SelectionChanged" />

        <!-- Add New System -->
        <Button
                x:Name="AddSystemButton"
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,0,10,10"
                Padding="10"
                HorizontalAlignment="Center"
                Click="AddSystemButton_Click"
                Content="Add New System" />

        <!-- Save New System -->
        <Button
                x:Name="SaveSystemButton"
                Grid.Row="1"
                Grid.Column="1"
                Margin="10,0,10,10"
                Padding="10"
                HorizontalAlignment="Center"
                Click="SaveSystemButton_Click"
                Content="Save System" />

        <!-- Delete System -->
        <Button
            x:Name="DeleteSystemButton"
            Grid.Row="1"
            Grid.Column="2"
            Margin="10,0,10,10"
            Padding="10"
            HorizontalAlignment="Center"
            Click="DeleteSystemButton_Click"
            Content="Delete Open System" />

        <ScrollViewer
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- System Name -->
                <Label
                    Margin="10,20,10,10"
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="System Name" />
                <TextBox
                    Margin="0,20,10,10"
                    x:Name="SystemNameTextBox"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"/>

                <!-- System Folder -->
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="System Folder" />
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="SystemFolderTextBox"
                    Grid.Row="1"
                    Grid.Column="1"/>
                <Button
                    Margin="0,0,10,10"
                    Name="SystemFolderButton"
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="160"
                    Click="ChooseSystemFolder"
                    Content="Set System Folder" />

                <!-- System Is MAME? -->
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="2"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="System Is MAME?" />
                <ComboBox
                    Margin="0,0,10,10"
                    x:Name="SystemIsMameComboBox"
                    Grid.Row="2"
                    Grid.Column="1">
                    <ComboBoxItem>True</ComboBoxItem>
                    <ComboBoxItem>False</ComboBoxItem>
                </ComboBox>

                <!-- Format To Search Inside System Folder -->
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="3"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Format To Search in System Folder"/>
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="FormatToSearchTextBox"
                    Grid.Row="3"
                    Grid.Column="1" />
                <Label
                    Margin="0,0,10,10"
                    Grid.Row="3"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Content="use , or | to add multiple" />

                <!-- Extract File Before Launch -->
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="4"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Extract File Before Launch?"/>
                <ComboBox
                    Margin="0,0,10,10"
                    x:Name="ExtractFileBeforeLaunchComboBox"
                    Grid.Row="4"
                    Grid.Column="1">
                    <ComboBoxItem>True</ComboBoxItem>
                    <ComboBoxItem>False</ComboBoxItem>
                </ComboBox>

                <!-- Format To Launch After Extraction -->
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="5"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Format To Launch After Extraction"/>
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="FormatToLaunchTextBox"
                    Grid.Row="5"
                    Grid.Column="1"/>
                <Label
                    Margin="0,0,10,10"
                    Grid.Row="5"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Content="use , or | to add multiple" />

                <!-- Emulator 1 -->
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="6"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Emulator 1 Name" />
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="Emulator1NameTextBox"
                    Grid.Row="6"
                    Grid.Column="1"/>
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="7"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Emulator 1 Location" />
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="Emulator1LocationTextBox"
                    Grid.Row="7"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch" />
                <Button
                    Margin="0,0,10,10"
                    Grid.Row="7"
                    Grid.Column="2"
                    Width="160"
                    Click="ChooseEmulator1Location"
                    Content="Set Emulator 1 Location" />
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="8"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Emulator 1 Parameters" />
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="Emulator1ParametersTextBox"
                    Grid.Row="8"
                    Grid.Column="1"/>

                <!-- Emulator 2 -->
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="9"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Emulator 2 Name" />
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="Emulator2NameTextBox"
                    Grid.Row="9"
                    Grid.Column="1"/>
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="10"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Emulator 2 Location" />
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="Emulator2LocationTextBox"
                    Grid.Row="10"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch" />
                <Button
                    Margin="0,0,10,10"
                    Name="Emulator2LocationButton"
                    Grid.Row="10"
                    Grid.Column="2"
                    Width="160"
                    Click="ChooseEmulator2Location"
                    Content="Set Emulator 2 Location" />
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="11"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Emulator 2 Parameters" />
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="Emulator2ParametersTextBox"
                    Grid.Row="11"
                    Grid.Column="1"/>

                <!-- Emulator 3 -->
                <Button
                    Margin="10,0,10,10"
                    x:Name="ToggleEmulator3Button"
                    Content="Show Emulator 3"
                    Click="ToggleEmulator3Button_Click"
                    Grid.Row="15"
                    Grid.Column="0" />
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="15"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Emulator 3 Name"
                    x:Name="Emulator3NameLabel"
                    Visibility="Collapsed"/>
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="Emulator3NameTextBox"
                    Grid.Row="15"
                    Grid.Column="1"
                    Visibility="Collapsed"/>
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="16"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Emulator 3 Location"
                    x:Name="Emulator3NameLabel2"
                    Visibility="Collapsed"/>
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="Emulator3LocationTextBox"
                    Grid.Row="16"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch" 
                    Visibility="Collapsed"/>
                <Button
                    Margin="0,0,10,10"
                    x:Name="Emulator3LocationButton"
                    Grid.Row="16"
                    Grid.Column="2"
                    Width="160"
                    Click="ChooseEmulator3Location"
                    Content="Set Emulator 3 Location" 
                    Visibility="Collapsed"/>
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="17"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Emulator 3 Parameters"
                    x:Name="Emulator3NameLabel3"
                    Visibility="Collapsed"/>
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="Emulator3ParametersTextBox"
                    Grid.Row="17"
                    Grid.Column="1"
                    Visibility="Collapsed"/>

                <!-- Emulator 4 -->
                <Button
                    Margin="10,0,10,10"
                    x:Name="ToggleEmulator4Button"
                    Content="Show Emulator 4"
                    Click="ToggleEmulator4Button_Click"
                    Grid.Row="18"
                    Grid.Column="0" />
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="18"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Emulator 4 Name"
                    x:Name="Emulator4NameLabel"
                    Visibility="Collapsed"/>
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="Emulator4NameTextBox"
                    Grid.Row="18"
                    Grid.Column="1"
                    Visibility="Collapsed"/>
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="19"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Emulator 4 Location"
                    x:Name="Emulator4NameLabel2"
                    Visibility="Collapsed"/>
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="Emulator4LocationTextBox"
                    Grid.Row="19"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch" 
                    Visibility="Collapsed"/>
                <Button
                    Margin="0,0,10,10"
                    x:Name="Emulator4LocationButton"
                    Grid.Row="19"
                    Grid.Column="2"
                    Width="160"
                    Click="ChooseEmulator4Location"
                    Content="Set Emulator 4 Location" 
                    Visibility="Collapsed"/>
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="20"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Emulator 4 Parameters"
                    x:Name="Emulator4NameLabel3"
                    Visibility="Collapsed"/>
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="Emulator4ParametersTextBox"
                    Grid.Row="20"
                    Grid.Column="1"
                    Visibility="Collapsed"/>

                <!-- Emulator 5 -->
                <Button
                    Margin="10,0,10,10"
                    x:Name="ToggleEmulator5Button"
                    Content="Show Emulator 5"
                    Click="ToggleEmulator5Button_Click"
                    Grid.Row="21"
                    Grid.Column="0"/>
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="21"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Emulator 5 Name"
                    x:Name="Emulator5NameLabel"
                    Visibility="Collapsed"/>
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="Emulator5NameTextBox"
                    Grid.Row="21"
                    Grid.Column="1"
                    Visibility="Collapsed"/>
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="22"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Emulator 5 Location"
                    x:Name="Emulator5NameLabel2"
                    Visibility="Collapsed"/>
                <TextBox
                    Margin="0,0,10,10"
                    x:Name="Emulator5LocationTextBox"
                    Grid.Row="22"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch" 
                    Visibility="Collapsed"/>
                <Button
                    Margin="0,0,10,10"
                    x:Name="Emulator5LocationButton"
                    Grid.Row="22"
                    Grid.Column="2"
                    Width="160"
                    Click="ChooseEmulator5Location"
                    Content="Set Emulator 5 Location" 
                    Visibility="Collapsed"/>
                <Label
                    Margin="10,0,10,10"
                    Grid.Row="23"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Emulator 5 Parameters"
                    x:Name="Emulator5NameLabel3"
                    Visibility="Collapsed"/>
                <TextBox
                    Margin="0,0,10,30"
                    x:Name="Emulator5ParametersTextBox"
                    Grid.Row="23"
                    Grid.Column="1"
                    Visibility="Collapsed"/>
            </Grid>
        </ScrollViewer>

    </Grid>
</Window>
