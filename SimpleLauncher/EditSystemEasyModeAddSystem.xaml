<Window
    x:Class="SimpleLauncher.EditSystemEasyModeAddSystem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Edit System"
    Width="450"
    Height="250"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" Margin="10">
        <Label Content="Please choose a system to Add" HorizontalAlignment="Center" />

        <ComboBox x:Name="SystemNameDropdown" HorizontalAlignment="Stretch"
                  SelectionChanged="SystemNameDropdown_SelectionChanged" />

        <StackPanel Orientation="Horizontal" Margin="10,10,10,0" HorizontalAlignment="Center">
            <Button x:Name="DownloadEmulatorButton" Content="Download Emulator" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Margin="10" Padding="5" Click="DownloadEmulatorButton_Click"
                    IsEnabled="False" />
            <Button x:Name="DownloadCoreButton" Content="Download Core" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Margin="10" Padding="5" Click="DownloadCoreButton_Click"
                    IsEnabled="False" />
            <Button x:Name="DownloadExtrasButton" Content="Download Extras" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Margin="10" Padding="5" Click="DownloadExtrasButton_Click"
                    IsEnabled="False" />
        </StackPanel>

        <Grid>
            <ProgressBar x:Name="DownloadProgressBar" HorizontalAlignment="Stretch" Height="25" Margin="10" />
            <TextBlock x:Name="DownloadProgressBarText" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Download Progress" />
        </Grid>
        
        <StackPanel Orientation="Horizontal" Margin="10,0,10,0" HorizontalAlignment="Center">
            <Button x:Name="AddSystemButton" Content="Add System in Simple Launcher" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Margin="10" Padding="5" Click="AddSystemButton_Click"
                    IsEnabled="False" />
        </StackPanel>
       
    </StackPanel>
</Window>
