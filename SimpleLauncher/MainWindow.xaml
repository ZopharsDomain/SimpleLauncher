<Window
    x:Class="SimpleLauncher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Simple Launcher"
    Width="890"
    MinWidth="890"
    Height="500"
    Closing="MainWindow_Closing"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Grid Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" VerticalAlignment="Top">

            <MenuItem Header="Options">
                <MenuItem Header="Set Thumbnail Size">
                    <MenuItem
                        x:Name="Size100"
                        Click="ThumbnailSize_Click"
                        Header="100 pixels" />
                    <MenuItem
                        x:Name="Size150"
                        Click="ThumbnailSize_Click"
                        Header="150 pixels" />
                    <MenuItem
                        x:Name="Size200"
                        Click="ThumbnailSize_Click"
                        Header="200 pixels" />
                    <MenuItem
                        x:Name="Size250"
                        Click="ThumbnailSize_Click"
                        Header="250 pixels" />
                    <MenuItem
                        x:Name="Size300"
                        Click="ThumbnailSize_Click"
                        Header="300 pixels" />
                    <MenuItem
                        x:Name="Size350"
                        Click="ThumbnailSize_Click"
                        Header="350 pixels" />
                    <MenuItem
                        x:Name="Size400"
                        Click="ThumbnailSize_Click"
                        Header="400 pixels" />
                    <MenuItem
                        x:Name="Size450"
                        Click="ThumbnailSize_Click"
                        Header="450 pixels" />
                    <MenuItem
                        x:Name="Size500"
                        Click="ThumbnailSize_Click"
                        Header="500 pixels" />
                    <MenuItem
                        x:Name="Size550"
                        Click="ThumbnailSize_Click"
                        Header="550 pixels" />
                    <MenuItem
                        x:Name="Size600"
                        Click="ThumbnailSize_Click"
                        Header="600 pixels" />
                </MenuItem>
                <MenuItem
                    x:Name="HideGamesNoCover"
                    Click="HideGamesNoCover_Click"
                    Header="Hide Games With No Cover" />
                <MenuItem
                    x:Name="EnableGamePadNavigation"
                    Click="EnableGamePadNavigation_Click"
                    Header="Enable GamePad Navigation" />
            </MenuItem>
            <MenuItem
                x:Name="EditSystemButton"
                Click="EditSystem_Click"
                Header="Edit System" />
            <MenuItem
                x:Name="BugReportButton"
                Click="BugReport_Click"
                Header="Bug Report" />
            <MenuItem
                x:Name="DonateButton"
                Click="Donate_Click"
                Header="Donate" />
            <MenuItem
                x:Name="AboutButton"
                Click="About_Click"
                Header="About" />
            <MenuItem
                x:Name="ExitButton"
                Click="Exit_Click"
                Header="Exit" />
        </Menu>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <!--  Dynamically add letter buttons here or define them manually in XAML  -->
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label
                Width="95"
                VerticalAlignment="Center"
                Content="Select System:" />
            <ComboBox
                Name="SystemComboBox"
                Width="765"
                VerticalAlignment="Center"
                SelectionChanged="SystemComboBox_SelectionChanged" />
        </StackPanel>

        <StackPanel
            Grid.Row="3"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label
                Width="95"
                VerticalAlignment="Center"
                Content="Select Emulator:" />
            <ComboBox
                Name="EmulatorComboBox"
                Width="765"
                VerticalAlignment="Center"
                SelectionChanged="EmulatorComboBox_SelectionChanged" />

        </StackPanel>

        <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Visible">
            <WrapPanel x:Name="GameFileGrid" Orientation="Horizontal">
                <!--  Items will be added here programmatically  -->
            </WrapPanel>
        </ScrollViewer>
        
        <StackPanel
            Grid.Row="5"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label
                Width="95"
                VerticalAlignment="Center"
                Content="Pagination:" />
            <Button></Button>
            <Button></Button>
        </StackPanel>
        
    </Grid>
</Window>