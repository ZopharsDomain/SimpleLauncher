<controls:MetroWindow x:Class="SimpleLauncher.GlobalStats"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="Global Stats"
                      Width="900"
                      Height="800">
    <StackPanel>
        <Label Margin="10" Content="Global Statistics" FontSize="16" FontWeight="Bold" />
        <TextBlock Margin="10" x:Name="GlobalInfoTextBlock" TextWrapping="Wrap" />

        <!-- ScrollViewer wrapping DataGrid -->
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Height="500" Margin="10">
            <DataGrid x:Name="SystemStatsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" GridLinesVisibility="All" BorderThickness="1" BorderBrush="Gray">
                <!-- Define columns -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="System Name" Binding="{Binding SystemName}" Width="*" />
                    <DataGridTextColumn Header="Number of ROMs or ISOs" Binding="{Binding NumberOfFiles}" Width="Auto" />
                    <DataGridTextColumn Header="Number of Cover Images" Binding="{Binding NumberOfImages}" Width="Auto" />
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <Border x:Name="ProgressBar" BorderBrush="Gray" Margin="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Processing, please wait..." HorizontalAlignment="Center" Margin="20" />
                <ProgressBar IsIndeterminate="True" Width="200" Margin="10" />
            </StackPanel>
        </Border>
    </StackPanel>
</controls:MetroWindow>